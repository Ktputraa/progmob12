<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.travelands.pemesanantiket">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PemesananTiket"
        android:usesCleartextTraffic="true"
        tools:targetApi="s">
        <activity
            android:name=".hotelrekomendasi.SurabayaActivity"
            android:exported="false" />
        <activity
            android:name=".hotelrekomendasi.BaliActivity"
            android:exported="false" />
        <activity
            android:name=".hotelrekomendasi.BandungActivity"
            android:exported="false" />
        <activity
            android:name=".hotelrekomendasi.JakartaActivity"
            android:exported="false" />
        <activity
            android:name=".listhotel.listhotel"
            android:exported="false" />
        <activity
            android:name=".dashboardiklan.IklanActivity"
            android:exported="false" />
        <activity
            android:name=".login.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".splashscreenn.SplashScreenActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name="com.travelands.pemesanantiket.view.main.MainActivity"
            android:exported="true" />
        <activity
            android:name="com.travelands.pemesanantiket.view.history.HistoryActivity"
            android:exported="true" />
        <activity
            android:name="com.travelands.pemesanantiket.view.input.DataPesawatActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="true"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.travelands.pemesanantiket.view.input.DataKeretaActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="true"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.travelands.pemesanantiket.view.input.DataKapalActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="true"
            android:windowSoftInputMode="adjustResize" />
    </application>
</manifest>